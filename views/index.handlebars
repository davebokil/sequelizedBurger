    <div class="container-fluid">
        <div class="row" style="background-color: #ecca00;">
            <div class="col-lg-12">
                <h1 style="color: red; font-size: 80px;">--<br>Burger Chef<br>--</h1>
                <p class="lead" style="text-align: center;">Create some burgers!
                    <br>Test your creations!</p>
            </div>
        </div>
        <div class="row" style="background-color: #ec9b00;">
            <!-- <div class="col-lg-4"></div> -->
            <div class="col-lg-12">
                <h2 style="text-align: center; font-family: 'Fascinate', cursive;">Create a Burger!</h2>
                <form class="create-update-form" action="/" method="POST">
                    <div class="form-group" style="text-align: center;">
                        <!-- <label for="ca">Burger Name:</label> -->
                        <input type="text" id="ca" name="burger_name">
                        <button type="submit" class="btn">Add Burger</button>
                    </div>
                </form>
                <!-- <img src="assets/img/bob.jpg" class="img-responsive text-center" alt="Bob's Burgers" /> -->
            </div>
        </div>
        <div class="row" style="background-color: #ec5300; font-size:40px">
            <div class="col-md-6">
                <h4>Burgers</h4>
                <ul class="list-group">
                    {{#each burgers}} {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit" class="btn">EAT THIS BURGER!</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
            <div class="col-lg-6">
                <h4>Eaten Burgers</h4>
                <ul class="list-group">
                    {{#each burgers}} {{#if this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="false">
                            {{!-- <button type="submit" class="btn">RETRY THIS BURGER!</button> --}}
                        </form>
                    </li>
                    {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>